#include <bits/stdc++.h>

using namespace std;

\\ Trident

int main() {
    int t, s, h;
    cin >> t >> s >> h;
    string space = "";
    for(int i = 0; i < s; i++)
    {
        space += " ";
    }
    for(int i = 0; i < t; i++)
    {
        cout << "*" + space + "*" + space + "*\n";
    }
    for(int i = 0; i < 2*s + 3; i++)
    {
        cout << "*";
    }
    cout << "\n";
    for(int i = 0; i < h; i++)
    {
        cout << space + " *\n";
    }
    return 0;
}
